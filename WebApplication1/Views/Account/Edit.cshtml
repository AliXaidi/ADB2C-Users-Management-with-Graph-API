@model WebApplication1.Domain.Requests.ResetPasswordRequestDTO

<h1>Reset Password</h1>

<form method="post">
    <div class="mb-3">
        <div class="mb-3">
            <label>Email</label>
            <input readonly asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>New Password</label>
            <input autocomplete="off" autofocus asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}